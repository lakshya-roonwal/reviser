
{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                   
    "rootDir": "src",                       
    "outDir": "dist",                       
    "strict": true,                         
    "esModuleInterop": true,                
    "moduleResolution": "node",             
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true                    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

